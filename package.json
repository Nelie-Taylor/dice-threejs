{
  "name": "@3d-dice/dice-box-threejs",
  "author": {
    "name": "Frank Ali"
  },
  "description": "A 3D environment for rolling game dice using threejs and cannon-es",
  "private": false,
  "keywords": [
    "3D",
    "dice",
    "roll",
    "roller",
    "javascript",
    "rpg",
    "dnd",
    "d&d",
    "tabletop"
  ],
  "version": "0.0.12",
  "license": "MIT",
  "homepage": "https://fantasticdice.games/",
  "repository": {
    "type": "git",
    "url": "https://github.com/3d-dice/dice-box-threejs"
  },
  "bugs": {
    "url": "https://github.com/3d-dice/dice-box-threejs/issues"
  },
  "dev-files": [
    "src"
  ],
  "dev-main": "./src/index",
  "file": [
    "dist",
    "public"
  ],
  "main": "./dist/dice-box-threejs.umd.js",
  "module": "./dist/dice-box-threejs.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/dice-box-threejs.es.js",
      "require": "./dist/dice-box-threejs.umd.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "cannon-es-debugger": "^1.0.0",
    "vite": "^3.0.8",
    "vitest": "^3.0.5",
    "typescript": "^5.0.0",
    "@types/three": "^0.143.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "cannon-es": "^0.20.0",
    "three": "^0.143.0"
  }
}